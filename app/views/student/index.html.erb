<h1>Student Tab</h1>
<br>
<%= form_for @new_student, url: student_index_path, html: {class: "student_form"} do |i| %>
    <h1> First Name </h1>
    <br>
    <%= i.text_field :fName %>
    <br> 
    <h1> Last Name </h1>
    <br>
    <%= i.text_field :lName %>
    <br>
    <h1> Age</h1>
    <br>
    <%= i.text_field :age %>
    <br>
    <h1> Education </h1>
    <br>
    <%= i.text_field :education %>
    <br>
    <br>
    <%= i.submit "Create" %>
<% end %>

<div>
  <% @student.each do |i| %>
    <p> First Name: <%= i.fName %></p>
    <p> Last Name: <%= i.lName %></p>
    <p> Age: <%= i.age %> </p>
    <p> Education: <%= i.education %> </P>
    <%= link_to "DELETE", '/student/' + i.id.to_s, method: :delete, class: "btn" %>
    <%= link_to  "EDIT", edit_student_path(@student) %>
  <% end %>
</div>