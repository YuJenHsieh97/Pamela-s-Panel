<%= form_for @new_instructor, url: instructor_index_path, html: {class: "instructor_form"} do |i| %>
  <div class="ui form">
    <h4 class="ui dividing header"> Create Instructor</h4>
    <div class='field'>
      <label> First Name </label>
      <%= i.text_field :fName %>
    </div>
    <div class='field'>
    <label> Last Name </label>
    <%= i.text_field :lName %>
    </div>
    <div class='field'>
    <label> Age</label>
    <%= i.text_field :age %>
    </div>
    <div class='field'>
    <label> Salary </label>
    <%= i.text_field :salary %>
    </div>
    <div class='field'>
    <label> Education </label>
    <%= i.text_field :education %>
    </div>
    <div class="field">
          <label> Cohort</label>
          <%= (select_tag "cohort", options_from_collection_for_select(Cohort.all, "id", "name"))%>
        </div>
    <br>
    <button class="ui green button" type='<%= i.submit %>'>Create</button>
    <br>
    <br>
<% end %>

<div>
<h4 class="ui dividing header">Instructors</h4>
  <table class="ui celled table">
    <thead>
    <tr><th> First Name </th>
    <th>Last Name</th>
    <th>Age</th>
    <th>Salary</th>
    <th>Education</th>
    <th> Cohort </th>
    <th></th>
    <th></th>
    </tr></thead>
  <tbody>
    <% @instructor.each do |i| %>
      <tr>
        <td data-label="First Name"><%= i.fName %></td>
        <td data-label="Last Name"><%= i.lName %></td>
        <td data-label="Age"><%= i.age %> </td>
        <td data-label="Salary"><%= i.salary %> </td>
        <td data-label="Education"><%= i.education %> </td>
        <td data-label="Cohort"><%= i.cohorts.first.name %></td>
        <td data-label="""><%= link_to  "EDIT", edit_instructor_path(@instructor) %></td>
        <td data-label=""><%= link_to "DELETE", '/instructor/' + i.id.to_s, method: :delete, class: "btn" %></td>
      </tr>
    <% end %>
  </div>

